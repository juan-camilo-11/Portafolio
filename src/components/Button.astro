---
interface Props {
  text: string;
  type: "Primary" | "Secondary"; 
  url: string
}

const { text, type , url} = Astro.props;
---
<a href={url} target="_blank" class=`${type === "Primary" ? " bg-black/90 text-white" : " bg-white border border-1 border-solid border-black/90"} flex items-center gap-2 px-4 py-2 rounded-xl hover:text-blue-500 transition duration-300 ease-in-out`>
    <slot></slot>
    {text}
</a>
